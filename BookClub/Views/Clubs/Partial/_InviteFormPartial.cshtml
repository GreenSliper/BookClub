@model DAL.Models.ClubInvite

@Html.HiddenFor(x => x.ClubID)

<strong><label class="display-8" asp-for="ReceiverName"></label></strong>
<br />
<input type="text" class="display-8 line-field" placeholder="Name" maxlength="50" style="width:100%" asp-for="ReceiverName">
<span class="display-8" style="color:red;" asp-validation-for="ReceiverName"></span>
<br />
<br />

<strong><label class="display-8" asp-for="ExpirationTime"></label></strong>
<br />
<input class="display-8 form-control w-auto" asp-for="ExpirationTime" asp-format="{0:yyyy-MM-ddTHH:mm}">
<span class="display-8" style="color:red;" asp-validation-for="ExpirationTime"></span>
<br />

<strong><label class="display-8" asp-for="GivenPermissions"></label></strong>
<select asp-for="GivenPermissions" asp-items="Html.GetEnumSelectList<DAL.DTO.MemberPermissions>()" class="display-8">
</select>
<br />
<br />

<strong><label class="display-8" asp-for="Message"></label></strong>
<br />
<textarea type="text" class="display-8 description-field" placeholder="Write a couple of words to the receiver"
          rows="3" maxlength="255" style="width:100%" asp-for="Message"></textarea>
<span class="display-8" style="color:red;" asp-validation-for="Message"></span>